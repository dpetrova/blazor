@if (Show)
{
    <div class="alert alert-secondary mt-4" role="alert">
        @*use @ChildContent if you want to access the nested element in the Alert component*@
        @ChildContent
    </div>
}

@code {
    [Parameter]
    public bool Show { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
