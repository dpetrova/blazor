@*a templated component -> it states the TItem as a type parameter using the @typeparam TItem syntax
you can have more than one type parameter -> list each type parameter using the @typeparam syntax*@

@typeparam TItem

<table border="1">
    <thead>
        <tr>@Header</tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            @*use the @Row(element) razor syntax to apply the Row parameter*@
            <tr>@Row(item)</tr>
        }
    </tbody>
    <tfoot>
        <tr>@Footer</tr>
    </tfoot>
</table>

@code {
    //parameters of type RenderFragment represents some markup (HTML, Blazor components)
    [Parameter]
    public RenderFragment Header { get; set; }

    //parameter of type RenderFragment<TItem> is a generic version of RenderFragment
    [Parameter]
    public RenderFragment<TItem> Row { get; set; }

    [Parameter]
    public RenderFragment Footer { get; set; }

    [Parameter]
    public IReadOnlyList<TItem> Items { get; set; }
}